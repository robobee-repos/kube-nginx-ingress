ingress-svc-yaml(parent, vars) ::= <<
apiVersion: v1
kind: Service
metadata: 
  name: ingress
  labels:
    app: ingress
  namespace: kube-system
spec: 
  type: NodePort
  ports:
    - port: 80
      name: http
      targetPort: 80
    - port: 443
      name: https
      targetPort: 443
  selector: 
    k8s-app: nginx-ingress-controller

>>
