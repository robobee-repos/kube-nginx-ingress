ingress-svc-yaml(parent, vars) ::= <<
apiVersion: v1
kind: Service
metadata: 
  name: ingress
  labels:
    app: ingress
    robobeerun.com/group: cluster-ingress
  namespace: kube-ingress
spec: 
  type: NodePort
  ports:
    - port: 80
      name: http
      targetPort: 80
      nodePort: 30000
    - port: 443
      name: https
      targetPort: 443
      nodePort: 30001
  selector: 
    k8s-app: nginx-ingress-controller

>>
